{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "array",
  "items": {
    "type": "object",
    "required": [
      "name",
      "certs",
      "city",
      "country",
      "date"
    ],
    "additionalProperties": false,
    "properties": {
      "name": {
        "type": "string",
        "minLength": 1
      },
      "github": {
        "type": "string",
        "pattern": "^[a-zA-Z0-9](?:[a-zA-Z0-9-]{0,37}[a-zA-Z0-9])?$"
      },
      "certs": {
        "type": "array",
        "minItems": 1,
        "items": {
          "type": "string",
          "minLength": 1
        }
      },
      "provider": {
        "type": "string"
      },
      "city": {
        "type": "string",
        "minLength": 1
      },
      "country": {
        "type": "string",
        "minLength": 1
      },
      "date": {
        "type": "string",
        "format": "date"
      },
      "bio": {
        "type": "string",
        "maxLength": 500
      },
      "twitter": {
        "type": "string",
        "pattern": "^[A-Za-z0-9_]{1,15}$"
      },
      "linkedin": {
        "type": "string",
        "pattern": "^[a-zA-Z0-9_-]{3,100}$"
      },
      "website": {
        "type": "string"
      },
      "avatar": {
        "type": "string",
        "pattern": "^/avatars/[a-zA-Z0-9_-]+\\.(png|jpg|jpeg)$"
      }
    }
  }
}
